<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#200000ff"
        android:orientation="vertical">

        <GridLayout
            android:padding="4dp"
            android:id="@+id/main_attack_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:columnCount="4"
            android:background="#20ff0000"/>

        <GridLayout
            android:padding="4dp"
            android:id="@+id/main_defence_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="4"
            android:background="#2000ff00"/>

        <TextView
            android:padding="16dp"
            android:id="@+id/main_result"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/main_copyright"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/license_button_title"
            android:gravity="center"
            android:background="#ffffffff"/>    </LinearLayout>

</ScrollView>

